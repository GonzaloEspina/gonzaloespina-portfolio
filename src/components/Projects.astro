---
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"

const PROJECTS = [
  {
    title: "CVNet",
    description:
      "Gestor de Reclutamiento. Permite tener una base de datos de candidados, un registro de sus postulaciones a diferentes empleos y el historial del proceso de selección de cada postulación.",
    link: "https://www.appsheet.com/start/a1dc69b9-a13b-470a-be29-9560fa90bfa8?platform=desktop#viewStack[0][identifier][Type]=Control&viewStack[0][identifier][Name]=Postulaciones%202&appName=DemoGestionCV-664751810",
    image: "/projects/cvnet.png"
  },
  {
    title: "Citapp",
    description:
      "Sistema pensado para consultorios médicos. Permite tener una base de datos de los pacientes, llevar la agenda de turnos de diferentes profesionales, el historial clínico de cada paciente con informes y un registro de facturación según las prácticas realizadas.",
    link: "https://www.appsheet.com/start/524811f9-581e-496e-9ef4-8a2c3fac6cce#control=Profesional%20con%20H.C%20y%20Facturaci%C3%B3n&page=dashboard",
    image: "/projects/citapp.png"
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, link }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Algunas de mis aplicaciones desarrolladas con Appsheet" class="" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Ver Demo
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



